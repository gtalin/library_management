    <form class="form-inline" action="" method="GET">
      <input class="form-control mr-sm-2" type="search" placeholder="Search <%= search_title %>" aria-label="Search" name="search" value="<%= typeof searchQuery !='undefined' ? searchQuery : '' %>" >
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search <%= search_title %> </button>
    </form>
  <!-- </div> -->
  
  <div class="results my-5">
    <h3>Search results for: <span><%= searchQuery %></span></h3>
    <h4>Displaying Total <span><%= numOfResults %></span> Results</h4>
    <% if (pages!==0) { %>
      <h4>
        Page 
        <span><%= pageNum %></span>
        of 
        <span><%= pages %></span> 
      </h4> 
    <% } %>
    
   </div>

